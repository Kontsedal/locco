{
  "name": "@kontsedal/locco",
  "version": "1.0.1",
  "keywords": [
    "lock",
    "distributed locks",
    "redlock",
    "mongo",
    "redis"
  ],
  "license": "MIT",
  "author": "Bohdan Kontsedal <kontsedalbohdan@gmail.com>",
  "description": "Distributed locks library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kontsedal/locco.git"
  },
  "scripts": {
    "clean": "del-cli dist",
    "build": "npm run clean && tsup src/index.ts --format cjs,esm --dts --clean --outDir dist",
    "type:check": "tsc -p tsconfig.json --noEmit",
    "compose": "docker-compose up",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check src --ext .ts",
    "lint:fix": "biome check --apply src --ext .ts",
    "publish:package": "npm run build && np"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "biome": "^0.3.3",
    "del-cli": "^7.0.0",
    "ioredis": "5.8.2",
    "mongodb": "7.0.0",
    "np": "^10.2.0",
    "prettier": "3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=18"
  }
}
