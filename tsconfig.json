{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2018",
    "module": "es2020",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*.ts",
  ]
}
